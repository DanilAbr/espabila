<div class="option-card {{ isReversed ? 'option-card--reversed' : '' }}">
  <svg
    class="option-card__number-icon"
    width="{{ props.icon.width }}"
    height="{{ props.icon.height }}"
  >
    <use xlink:href="#{{ props.icon.id }}" />
  </svg>
  <div class="option-card__image-wrapper">
    <picture>
      <source
        media="(min-width: 768px)"
        srcset={{ [props.img.default.tablet, '1x,', props.img.retina.tablet,'2x']|join(' ') }}
      >
      <source
        media="(min-width: 1152px)"
        srcset={{ [props.img.default.desktop, '1x,', props.img.retina.desktop,'2x']|join(' ') }}
      >
      <img
        class="option-card__image option-card__image--{{ props.id }}"
        src="{{ props.img.default.mobile }}"
        srcset="{{ props.img.retina.mobile }} 2x"
        alt="{{ props.img.alt }}"
      >
    </picture>
  </div>
  <div class="option-card__content">
    <h2 class="option-card__title">{{ props.title }}</h2>
    <strong class="option-card__annotation">{{ props.annotation }}</strong>
    <p class="option-card__description">{{ props.description }}</p>
    <button class="option-card__more-button button-secondary">
      Подробнее о курсе
    </button>
  </div>
</div>
